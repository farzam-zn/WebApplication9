@using WebApplication9.ViewModels
@model List<SaleList>
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2>Invoices list</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Invoice" asp-action="AddDetails" class="btn btn-primary">
				Add Detail
			</a>

		</div>
	</div>
	<table class="table table-bordered table-dark">
		<thead>
			<tr>
				<th>

					Product Name
				</th>
				<th>
					Price
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var a in Model)
			{
				<tr>

					<td>@a.theName</td>
					<td>@a.theQ</td>
					<td align="center">
						<div class="w-75 btn-group" role="group">
							@*<a asp-controller="Category" asp-action="Edit" class="btn btn-light mx-2">
						<i class="bi bi-pencil-square"></i>Edit
						</a>*@
							<a asp-controller="Sale" asp-route-x="@a.Id" asp-action="SaleDetailsDelete" class="btn btn-danger px-2.2 mx-2">
								Delete
							</a>
							<a asp-controller="Invoice" asp-route-id="@a.Id" asp-action="InvoiceEdit" class="btn btn-secondary px-2.2">
								Edit
							</a>
						</div>



					</td>
				</tr>
			}
		</tbody>

	</table>
