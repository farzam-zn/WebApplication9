@using Models.Models
@model Product

<form method="post">
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient text-light py-4">
		<div class="row">
			<div class="col-12 text-center">
				<h3 class="text-white text-uppercase">@Model.Name </h3>
				<p class="text-white-50 fw-bold mb-0">By Trendis</p>
			</div>
		</div>
	</div>
	<div class="card-body">
		<div class="py-3">
			<div class="row">
				<div class="col-6 col-md-2 offset-lg-1 pb-1">
					<a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-bold btn-sm text-uppercase">
						<small>Back to Home</small>
					</a>
				</div>
			</div>
			<div class="row">
				<div class="col-12 col-lg-3 offset-lg-3 text-center mb-3">
					<img src="@Model.ImageUrl"class="rounded"/>
				</div>
				<div class="col-12 col-lg-6 offset-lg-1">
					<div class="col-12 col-md-6 pb-4">
						<span class="badge"></span>
					</div>
					@* <div class="row ps-2">
						<h6 class="text-dark text-opacity-50"></h6>
					</div> *@
					<div class="row ps-2">
						<h6 class="text-dark text-opacity-50 pb-2">
							List Price:
							<span class="text-decoration-line-through">@Model.ListPrice</span>
						</h6>
					</div>
					<div class="row text-center ps-2">
						<div class="p-1 col-3 col-lg-2 bg-white border-bottom">
							<div class="text-dark text-opacity-50 fw-bold">Quantiity</div>
						</div>
						<div class="p-1 col-3 col-lg-2 bg-white border-bottom">
							<div class="text-dark text-opacity-50 fw-bold">Price</div>
						</div>
							<div class="p-1 col-3 col-lg-2 bg-white border-bottom">
								<div class="text-dark text-opacity-50 fw-bold">51-100</div>
							</div>
							<div class="p-1 col-3 col-lg-2 bg-white border-bottom">
								<div class="text-dark text-opacity-50 fw-bold">100+</div>
							</div>
					</div>
					<div class="row text-center ps-2">
						<div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
								<div>Price</div>
						</div>
							<div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
								<div>@Model.ListPrice.ToString("c")</div>
							</div>
							<div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
								<div>@Model.Price50.ToString("c")</div>
							</div>
							<div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
								<div>@Model.Price100.ToString("c")</div>
							</div>
					</div>
					<div class="row pl-2 mb-3">
						<div class="col-md-4">
							<div class="input-group mb-3">
								<span class="input-group-text bg-primary text-white border-0 fw-bold"id="inputGroup-sizing-default">count</span>
							<input type="number" value="1" class="form-control text-end"
							aria-label="sizing example input"aria-describedby="inputGroup-sizing-default" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-12 col-md-6 pb-1">
							<button type="submit" disabled class="btn btn-primary bg-gradient w-100 text-uppercase fw-bold">
								Add to Cart(coming soon...)
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</form>